<odoo>
    <data>
        <record id="prasymas_del_pavardes_pakeitimo_form" model="ir.ui.view">
            <field name="name">Prašymas dėl pavardės pakeitimo</field>
            <field name="model">e.document</field>
            <field name="robo_front" eval="True"/>
            <field name="inherit_id" ref="e_document.e_document_request_base_view_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="document_1_filename" invisible="1"/>
                </xpath>

                <xpath expr="//group[@name='main_document_info']" position="inside">
                    <group>
                        <field name="date_1"  string="Dokumento data" required="1" />
                    </group>
                    <group>
                        <field name="text_1" string="Santuokos liudijimo nr."/>
                        <field name="text_2" string="Pavardė" required="1" />
                        <field name="document_1" options="{'no_create': True, 'no_open': True}" string="Dokumentas"
                               filename="document_1_filename"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="prasymas_del_pavardes_pakeitimo_action" model="ir.actions.act_window">
            <field name="name">Prašymas dėl pavardės pakeitimo</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">e.document</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="robo_menu" ref="e_document.e_document_root"/>
            <field name="context">{u'default_document_type': u'prasymas', u'rec_template_id':
                u'prasymas_del_pavardes_pakeitimo_template', u'e_document_view_type': u'rigid'}
            </field>
            <field name="target">current</field>
            <field name="view_id" ref="e_document.prasymas_del_pavardes_pakeitimo_form"/>
        </record>


        <record id="prasymas_del_pavardes_pakeitimo_menu" model="ir.ui.menu">
            <field name="name">Prašymas dėl pavardės pakeitimo</field>
            <field name="robo_front" eval="True"/>
            <field name="searchable" eval="True"/>
            <field name="parent_id" ref="prasymas"/>
            <field name="action" ref="e_document.prasymas_del_pavardes_pakeitimo_action"/>
            <field name="sequence">2</field>
            <field name="tags">prašymas,pakeisti pakeitimas darbuotojo pavardė</field>
        </record>


        <record id="prasymas_del_pavardes_pakeitimo_template" model="e.document.template">
            <field name="body" type="html">
                <div style="padding-left: 20px;" id="body">
                    Remiantis {{ date_1 }} išduotu santuokos liudijimu Nr. {{ text_1 }}, prašau mano pavardę pakeisti į
                    {{ text_2 }}.
                    <br/>
                    PRIDEDAMAS DOKUMENTAS: Santuokos liudijimo kopija. {{ extra_text_html }}
                </div>
            </field>
            <field name="name">Prašymas dėl pavardės pakeitimo</field>
            <field name="footer" type="html">
                <div>
                    <table width="25%" align="right" style="float: right; margin-left:10px; margin-top:40px">
                        <tr style="border-style:none">
                            <td>
                                <span>
                                    <br/>
                                </span>
                            </td>
                        </tr>
                        <tr style="border-style:none; border-top-style:solid; border-top-width:1px">
                            <td style="border-style:none;text-align:center" align="center">(parašas)</td>
                        </tr>
                    </table>
                    <table width="65%" align="right" style="float: right; margin-top:40px">
                        <tr style="border-style:none">
                            <td style="border-style:none; margin-left:auto; margin-right:auto; text-align: center;">
                                <span>{{ employee_id1 }}</span>
                            </td>
                        </tr>
                        <tr style="border-style:none; border-top-style:solid; border-top-width:1px">
                            <td style="border-style:none;text-align:center" align="center">
                                <span>(vardas, pavardė)</span>
                            </td>
                        </tr>
                    </table>
                </div>
            </field>
            <field name="view_id" ref="e_document.prasymas_del_pavardes_pakeitimo_form"/>
            <field name="header" type="html">
                <style type="text/css">
                    .centras {
                    text-align: center;
                    margin-left:auto;
                    margin-right:auto;
                    }
                    .desine{
                    float: right;
                    width: 300px;
                    text-align: justify
                    .img-rounded {
                    width: 100px;
                    }
                    }
                </style>
                <div>
                    <center>
                        <div class="centras">
                            <img src="/web/binary/company_logo" style="max-height:200px; padding-bottom:15px;"/>
                            <table width="40%" class="centras"
                                   style="margin-left:auto; margin-right:auto; border-style:none">
                                <tr style="border-style:none">
                                    <td style="border-style:none">
                                        <center>
                                            <p style="font-weight:bold">
                                                <span>{{company_id}}</span>
                                            </p>
                                            <p style="font-weight:bold">
                                                <span>{{ department_id }}{% if job_id1 %},{%endif%} {{ job_id1}}</span>
                                            </p>
                                            <span>{{ employee_id1 }}</span>
                                        </center>
                                    </td>
                                </tr>
                                <tr style="border-style:none">
                                    <td style="border-style:none">
                                        <center>
                                            <p>
                                                <span>{% if manager_job_id %}{{kam(manager_job_id, 'Aa')}} {%
                                                    else%}Direktoriui{% endif %} {{kam(manager_id, 'Aa')}}
                                                </span>
                                            </p>
                                        </center>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </center>
                    <center>
                        <p style="font-weight:bold">
                            <span>PRAŠYMAS</span>
                        </p>
                        <span>PRAŠYMAS DĖL PAVARDĖS PAKEITIMO</span>
                        <p class="centras">
                            <span>{{ date_document }}</span>
                        </p>
                        <p class="centras">
                            <span>{{ vieta }}</span>
                        </p>
                    </center>
                </div>
            </field>
            <field name="template" type="html">
                <div class="page">
                    <style type="text/css">
                        .centras {
                        text-align: center;
                        margin-left:auto;
                        margin-right:auto;
                        }
                        .desine{
                        float: right;
                        width: 300px;
                        text-align: justify
                        .img-rounded {
                        width: 100px;
                        }
                        }
                    </style>
                    <div>
                        <center>
                            <div class="centras">
                                <img src="/web/binary/company_logo" style="max-height:200px; padding-bottom:15px;"/>
                                <table width="40%" class="centras"
                                       style="margin-left:auto; margin-right:auto; border-style:none">
                                    <tr style="border-style:none">
                                        <td style="border-style:none">
                                            <center>
                                                <p style="font-weight:bold">
                                                    <span>{{company_id}}</span>
                                                </p>
                                                <p style="font-weight:bold">
                                                    <span>{{ department_id }}{% if job_id1 %},{%endif%} {{ job_id1}}
                                                    </span>
                                                </p>
                                                <span>{{ employee_id1 }}</span>
                                            </center>
                                        </td>
                                    </tr>
                                    <tr style="border-style:none">
                                        <td style="border-style:none">
                                            <center>
                                                <p>
                                                    <span>{% if manager_job_id %}{{kam(manager_job_id, 'Aa')}} {%
                                                        else%}Direktoriui{% endif %} {{kam(manager_id, 'Aa')}}
                                                    </span>
                                                </p>
                                            </center>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </center>
                        <center>
                            <p style="font-weight:bold">
                                <span>PRAŠYMAS</span>
                            </p>
                            <span>PRAŠYMAS DĖL PAVARDĖS PAKEITIMO</span>
                            <p class="centras">
                                <span>{{ date_document }}</span>
                            </p>
                            <p class="centras">
                                <span>{{ vieta }}</span>
                            </p>
                        </center>
                    </div>

                    <div style="padding-left: 20px;" id="body">
                        Remiantis {{ date_1 }} išduotu santuokos liudijimu Nr. {{ text_1 }}, prašau mano pavardę
                        pakeisti į {{ text_2 }}.
                        <br/>
                        PRIDEDAMAS DOKUMENTAS: Santuokos liudijimo kopija. {{ extra_text_html }}
                    </div>

                    <div>
                        <table width="25%" align="right" style="float: right; margin-left:10px; margin-top:40px">
                            <tr style="border-style:none">
                                <td>
                                    <span>
                                        <br/>
                                    </span>
                                </td>
                            </tr>
                            <tr style="border-style:none; border-top-style:solid; border-top-width:1px">
                                <td style="border-style:none;text-align:center" align="center">(parašas)</td>
                            </tr>
                        </table>
                        <table width="65%" align="right" style="float: right; margin-top:40px">
                            <tr style="border-style:none">
                                <td style="border-style:none; margin-left:auto; margin-right:auto; text-align: center;">
                                    <span>{{ employee_id1 }}</span>
                                </td>
                            </tr>
                            <tr style="border-style:none; border-top-style:solid; border-top-width:1px">
                                <td style="border-style:none;text-align:center" align="center">
                                    <span>(vardas, pavardė)</span>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </field>
            <field name="python_code">obj.prasymas_del_pavardes_pakeitimo_workflow()</field>
            <field name="date_from_field_name" eval="False"/>
            <field name="date_to_field_name" eval="False"/>
            <field name="send_manager" eval="False"/>
            <field name="allow_copy" eval="False"/>
        </record>
    </data>
</odoo>
