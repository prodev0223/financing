<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="hr_employee_child_view_form" model="ir.ui.view">
            <field name="name">hr.employee.child.view.form</field>
            <field name="model">hr.employee.child</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="employee_id" readonly="1" options="{'no_open': True, 'no_create': True}"/>
                        <field name="birthdate"/>
                        <field name="has_disability"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>