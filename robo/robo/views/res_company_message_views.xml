<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="res_company_message_form">
            <field name="name">res.company.message.form</field>
            <field name="model">res.company.message</field>
            <field name="robo_front">True</field>
            <field name="arch" type="xml">
                <form string="Message">
                    <sheet>
                        <div>
                        <h1 class="mt0">
                            <field name="subject" class="oe_inline"/>
                        </h1>
                        </div>
                        <field name="body" options="{'style-inline': true}"/>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>