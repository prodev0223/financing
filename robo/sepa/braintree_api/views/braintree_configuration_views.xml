<odoo>
    <data>
        <!--Forms-->
        <record id="form_braintree_configuration" model="ir.ui.view">
            <field name="name">form.braintree.configuration</field>
            <field name="model">braintree.configuration</field>
            <field name="arch" type="xml">
                <form string="Braintree configuration" create="0" delete="0" update="0">
                    <sheet>
                        <group string="Braintree API configuration">
                            <div class="alert alert-warning" role="alert" style="margin-bottom: 2px;">
                                Welcome to the Braintree API integration. You can get started
                                by creating and configuring separate API gateways.
                                Information on how to proceed with the configuration can be found here -
                                <a href="https://pagalba.robolabs.lt/lt/integracijos#braintree-integracija"
                                   target="_blank">Robolabs Help
                                </a>
                                - in the section "Braintree integration".
                            </div>
                            <div class="alert alert-info" role="alert" style="margin-bottom: 2px;">
                                You can view API gateways, merchant accounts, transactions and customers
                                by clicking respective buttons bellow. Transactions and accounts for
                                specific gateway can be accessed from the gateway menu.
                            </div>
                        </group>
                        <footer style="text-align: center;">
                            <button name="action_open_api_gateways" class="oe_highlight" type="object"
                                    string="Open API gateways" default_focus="1"/>
                            <button name="action_open_merchant_accounts" class="oe_highlight" type="object"
                                    string="Open merchant accounts" default_focus="1"/>
                            <button name="action_open_transactions" class="oe_highlight" type="object"
                                    string="Open transactions" default_focus="1"/>
                            <button name="action_open_customers" class="oe_highlight" type="object"
                                    string="Open customers" default_focus="1"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>