<odoo>
    <data noupdate="1">
        <!--Default Amazon special products-->
        <record id="a_product_amazon_gift_wraps" model="amazon.product">
            <field name="product_name">Amazon / Gift Wraps</field>
            <field name="ext_product_code">AMZGFT</field>
            <field name="spec_product" eval="True"/>
        </record>
        <record id="a_product_amazon_shipping" model="amazon.product">
            <field name="product_name">Amazon / Shipping costs</field>
            <field name="ext_product_code">AMZSHP</field>
            <field name="spec_product" eval="True"/>
        </record>
        <record id="a_product_amazon_promotion" model="amazon.product">
            <field name="product_name">Amazon / Promotion Discounts</field>
            <field name="ext_product_code">AMZPRM</field>
            <field name="spec_product" eval="True"/>
        </record>
        <record id="a_product_amazon_fees" model="amazon.product">
            <field name="product_name">Amazon / Fees</field>
            <field name="ext_product_code">AMZFEE</field>
            <field name="spec_product" eval="True"/>
        </record>
        <!--Used in 'Sum' integration-->
        <record id="a_product_amazon_principal" model="amazon.product">
            <field name="product_name">Amazon / Principal</field>
            <field name="ext_product_code">AMZPRI</field>
            <field name="spec_product" eval="True"/>
        </record>
    </data>
</odoo>